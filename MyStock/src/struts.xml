		</action>
		<action name="Image_upload" class="newsInterfaceAction" method="uploadPhoto">
            <result type="json" name="success">
                <param name="contentType">
                    text/html
                </param>
            </result>
            <result type="json" name="error">
                <param name="contentType">
                    text/html

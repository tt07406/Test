<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE validators PUBLIC "-//Apache Struts//XWork Validator 1.0.3//EN"
        "http://struts.apache.org/dtds/xwork-validator-1.0.3.dtd">
<validators>
  <field name="mid">
      <field-validator type="requiredstring">
      	<param name="trim">true</param>
          <message>name.requried</message>
      </field-validator>
      <field-validator type="regex">
          <param name="expression"><![CDATA[(^[a-zA-Z]\w{5,17}$)]]></param>
          <message>name.regex</message>
      </field-validator>
  </field>
  <field name="realName">
      <field-validator type="requiredstring">
      	<param name="trim">true</param>
          <message>realname.required</message>
      </field-validator>
  </field>
  <field name="password">
  	  <field-validator type="requiredstring">
      	<param name="trim">true</param>
          <message>pass.required</message>
      </field-validator>	
      <field-validator type="stringlength">
          <param name="minlength">5</param>
         <param name="maxlength">15</param>
         <message>pass.range</message>
      </field-validator>
  </field>
  <field name="conf">
  	  <field-validator type="requiredstring">
      	  <param name="trim">true</param>
          <message>conf.required</message>
      </field-validator>		
      <field-validator type="fieldexpression">
        <!--指定逻辑表达式 -->
             <param name="expression"><![CDATA[#password==#conf]]></param>
             <message>conf.match</message>
       </field-validator>
  </field>
  <field name="email">
  	  <field-validator type="requiredstring">
      	 <param name="trim">true</param>
          <message>email.required</message>
      </field-validator>		
      <field-validator type="email">
          <message>email.match</message>
      </field-validator>
  </field>
  <field name="phone">
  	  <field-validator type="requiredstring">
      	  <param name="trim">true</param>
          <message>phone.required</message>
      </field-validator>		
      <field-validator type="regex">
          <param name="expression"><![CDATA[(^((\d{3,4})|\d{3,4}-)?\d{7,8}$)]]></param>
          <message>phone.regex</message>
     </field-validator>
  </field>
  <field name="idNum">
  	  <field-validator type="requiredstring">
      	  <param name="trim">true</param>
          <message>id.required</message>
      </field-validator>		
      <field-validator type="regex">
          <param name="expression"><![CDATA[(^\d{15}$)|(^\d{17}([0-9]|X)$)]]></param>
          <message>id.regex</message>
     </field-validator>
  </field>
</validators>